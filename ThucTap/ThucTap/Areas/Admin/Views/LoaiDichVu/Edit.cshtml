@model ThucTap.Models.LoaiDichVu

@{
	ViewData["Title"] = "Sửa Dịch Vụ";
}
<div class="card">
	<h5 class="card-header">@ViewData["Title"]</h5>
	<div class="card-body">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="ID" />
		
			<div class="form-group">
				<label asp-for="TenLoai" class="control-label"></label>
				<input asp-for="TenLoai" class="form-control" />
				<span asp-validation-for="TenLoai" class="text-danger"></span>
			</div>


	
				<div class="mb-0">
					<button type="submit" class="btn btn-primary"><i class="fa-light fa-floppy-disk"></i> Cập nhật</button> hoặc <a asp-action="Index">Quay về danh sách</a>
				</div>
		</form>
	</div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

}